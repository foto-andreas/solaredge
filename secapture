#!/bin/bash

set -o pipefail

cd /opt/SolarEdge/solaredge || exit 99

INTERFACE=enx0023573c8964
INTERFACE=eth0

DATA=/data/SolarEdge

CAPDIR=$DATA/pcap
JSONDIR=$DATA/json
LOGDIR=$DATA/log
FLDIR=$DATA/firstAndLast
STATDIR=$DATA

DATE=`date +%Y%m%d`

PIPE=/tmp/secapture-pipe
SMLPIPE=/tmp/sml-pipe

rm -f $PIPE
mkfifo $PIPE

rm -f $SMLPIPE
mkfifo $SMLPIPE

while read smlline; do 
        if [ "${smlline:0:1}" = "{" ]; then
	        echo "$smlline"  >> $JSONDIR/sml-$DATE.jsons
		[ ! -f $FLDIR/$DATE-first-sml.json ] && echo "$smlline"  > $FLDIR/$DATE-first-sml.json
		echo "$smlline"  > $FLDIR/$DATE-last-sml.json.tmp
		mv $FLDIR/$DATE-last-sml.json.tmp $FLDIR/$DATE-last-sml.json
        	echo "$smlline"  > $STATDIR/sml.json.tmp
	        mv $STATDIR/sml.json.tmp $STATDIR/sml.json
	fi
done <$SMLPIPE &

echo "sml pipe reader running"

java -Djava.library.path=/usr/lib/jni -jar ../sml/SmartMeterReader.jar /dev/ttyUSB1 2>$LOGDIR/sml-$DATE.log > $SMLPIPE &

echo "smlreader running"

python semonitor.py \
		-d $LOGDIR/$DATE.log \
		-k BE040526.key \
		-a <$PIPE | \
	tee $JSONDIR/$DATE.json | \
	python se2state-as.py -o $STATDIR/solar.json &

echo "reader running" >&2

if [ -f  $CAPDIR/$DATE.pcap ]; then
  echo "old file catted" >&2
  python seextract.py $CAPDIR/$DATE.pcap >$PIPE
fi

echo "begin to dump" >&2
/usr/sbin/tcpdump -i $INTERFACE -U -w - tcp | \
	tee -a $CAPDIR/$DATE.pcap | \
	python seextract.py >$PIPE

